<Window x:Class="MVD.PagesAndWindows.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVD.PagesAndWindows"
        mc:Ignorable="d"
        Background="#FFCCE7ED"
        Title="Окно подтверждения кода" Height="130" Width="305">
    <Grid Background="#FFCCE7ED" Margin="10">
        <StackPanel>
            <TextBlock Text="Введите код подтверждения" Margin="0 0 0 10" Width="160"/>
            <TextBox x:Name="CodeTextBox" Margin="0 0 0 10" Width="242"/>
            <Button Content="Подтвердить" Click="ConfirmButton_Click" Width="265" Background="#FFAFD8F0"/>
        </StackPanel>
    </Grid>
</Window>
