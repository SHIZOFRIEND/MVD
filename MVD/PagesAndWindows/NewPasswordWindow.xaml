<Window x:Class="MVD.PagesAndWindows.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVD.PagesAndWindows"
        mc:Ignorable="d"
        Background="#FFCCE7ED"
        Title="Новый пароль" Height="195" Width="315">
    <Grid Background="#FFCCE7ED" Margin="0,0,0,34">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock Text="Напишите новый пароль" HorizontalAlignment="Center" Width="140" Margin="5"/>
            <PasswordBox x:Name="txtNewPassword" Width="200" Margin="5"/>
            <TextBlock Text="Подтвердите пароль" HorizontalAlignment="Center" Width="120" Margin="5"/>
            <PasswordBox x:Name="txtConfirmPassword" Width="200" Margin="5"/>
            <Button Content="Сохранить" Click="SaveNewPassword_Click" Background="#FFAFD8F0" HorizontalAlignment="Center" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
