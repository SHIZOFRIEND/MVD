<Window x:Class="MVD.PagesAndWindows.PasswordRecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVD.PagesAndWindows"
        mc:Ignorable="d"
        Background="#FFCCE7ED"
        Title="Забыл пароль" Height="250" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введите вашу почту" Width="116"/>
            <TextBox x:Name="txtUsernameOrEmail" Margin="0 5" Height="18" Width="270"/>
            <Button Content="Отправить код подтверждения" Click="SendConfirmationCode_Click" Margin="0 10" Width="193" Background="#FFAFD8F0"/>
            <TextBlock Text="Введите код подтверждения" Width="174"/>
            <TextBox x:Name="txtConfirmationCode" Margin="0 5" Height="19" Width="271"/>
            <Button Content="Подтвердить" Click="Confirm_Click" Margin="0 10" Background="#FFAFD8F0" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
